<%= form_for(@job) do |f| %>
  <div class="form">
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description, size: '60x6' %>
    </div>
    <div>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <div>
      <%= f.label :company %>
      <%= f.text_field :company %>
    </div>
    <div>
      <%= f.label :level %>
      <%= f.text_field :level %>
    </div>
    <div>
      <%= f.label :qualifications %>
      <%= f.text_area :qualifications %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  </div>
<% end %>
