<p id="notice"><%= notice %></p>

<h1>RailsBridgeCorp Open Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><strong><%= link_to job.title, job_path(job) %></strong></td>
        <td><%= job.description %></td>
        <td><%= job.location %></td>
        <td><%= job.company %></td>
        <td><%= link_to 'Show', job_path(job) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
