<p id="notice"> <%= notice %> </p>
<div class="show">
  <p>
    <strong>Title:</strong>
    <%= @job.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @job.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @job.location %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= @job.company %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= @job.level %>
  </p>

